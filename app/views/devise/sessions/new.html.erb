<div class="welcome center">
  <!-- <%= image_tag('eagle-logo 2.png', class: 'logo-image') %> -->
  <h1>Welcome to Aquila</h1>
  <i>You'll see everything</i>
</div>


<div class="row">
  <div class="col s6 offset-s3">
    <div class="z-depth-1 grey lighten-4 row login-box">
      <h2 class="center">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field input-field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, class: 'validate', autofocus: true %>
        </div>

        <div class="field input-field">
            <%= f.label :password %><br/>
            <%= f.password_field :password, class: 'validate', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end %>

        <br>

        <div class="actions">
            <%= f.submit "Log in", class: 'btn' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
    </div>
    </div>
