<div class="row">
    <div class="col s12 center">
        <div class="card plans">
            <div class="card-tabs">
                <ul class="tabs tabs-fixed-width">
                  <li class="tab">
                    <a class="active" href="#test1">Plans</a>
                  </li>

                  <li class="tab">
                    <a href="#test2">Checklist</a>

                    <!-- Add checklist title so that user knows which checklist theyre following -->
                  </li>
                </ul>

                  <div class="card-content">
                    <div id="test1" class="plan-list left">
                      <% @plans.each do |plan|%>
                        <%= plan.title %>
                         <br>
                      <% end %>
                    </div>
                    <div id="test2">
                      <!-- <%#= current_user.email %> -->

                      <% if current_user.has_role? :student %>
                        <% @admin_plans = User.find(6).lists.first.plans %>
